{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true, // Change to false to allow TypeScript to emit output
        "jsx": "react-jsx",
        "baseUrl": "./"
    },
    "include": [
        "src",
        "src/models/scheme.model.ts",
        "src/models/taxes.model.ts"
    ]
}
